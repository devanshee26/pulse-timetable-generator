@model Pulse.Models.Schedule

@{
    ViewData["Title"] = "Generate Time Table";
}



<h4>Schedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTimeTable" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <select asp-for="Semester" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>

                </select>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branch" class="control-label"></label>
                <select asp-for="Branch" class="form-control">
                    <option value="ce">Computer Engineering</option>
                    <option value="ec">Electronics and Communication</option>
                    <option value="it">Information Technology</option>
                    <option value="cl">Civil Engineering</option>
                    <option value="ic">Instumentation and Control</option>
                    <option value="mh">Mechanical Engineering</option>
                </select>
                <span asp-validation-for="Branch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfWorkingDays" class="control-label">Number Of Working Days <br/> (Starting from Monday) </label>
                <select  asp-for="NoOfWorkingDays" class="form-control" >
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                   
                </select>
                <span asp-validation-for="NoOfWorkingDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfSlotsEachDay" class="control-label">Number of Lectures Each Day</label>
                <select asp-for="NoOfSlotsEachDay" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                </select>
                <span asp-validation-for="NoOfSlotsEachDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Starting Time</label>
                <select asp-for="StartTime" class="form-control">
                    <option value="8">8:00 am</option>
                    <option value="9">9:00 am</option>
                    <option value="10">10:00 am</option>
                    <option value="11">11:00 am</option>
                    <option value="12">12:00 pm</option>
                    
                </select>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EachSlotTime" class="control-label">Time For Each Lecture <br /> (in Hours)</label>
                <select asp-for="EachSlotTime" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                </select>
                <span asp-validation-for="EachSlotTime" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Generate" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
